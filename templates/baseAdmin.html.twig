<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Espace Admin - Lushie{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="{% block meta_description %}Découvrez Lushie, un univers doux et coloré autour des savons, avec conseils, comparateur et avis.{% endblock %}"
        />
        {% block javascripts %}
        {{
            importmap("app")
        }}
        {% endblock %} {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('/styles/app.css') }}" />
        {% endblock %}
    </head>
    <body>
        <header class="section">
            {% block header %}
            <div class="container">
                <img
                    class="logo"
                    src="{{ asset('/styles/img/logo-lush.svg') }}"
                    alt="Lushie logo"
                />
                <div class="nav">
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a href="{{ path('app_home') }}">Site</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('app_admin_soaps') }}"
                                >Les savons</a
                            >
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('admin_users') }}">utilisateurs</a>
                        </li>
                    </ul>
                </div>
            </div>
            {% endblock %}
        </header>

        <main>{% block body %}{% endblock %}</main>

        <footer class="section">
            {% block footer %}

            <div class="container">
                <div class="col-1">
                    <img
                        class="logo"
                        src="{{ asset('/styles/img/logo-lush.svg') }}"
                        alt="logo Lushie"
                    />
                </div>
                <div class="col-2">
                    <ul>
                        <li>
                            <a href="{{ path('mentions_legales') }}"
                                >Mentions légales</a
                            >
                        </li>
                        <li>
                            <a href="{{ path('rgpd') }}"
                                >Politique de confidentialité</a
                            >
                        </li>
                        <li>
                            <a href="{{ path('cookies') }}"
                                >Gestion des cookies</a
                            >
                        </li>
                    </ul>
                </div>
            </div>

            {% endblock %}
        </footer>
    </body>
</html>
