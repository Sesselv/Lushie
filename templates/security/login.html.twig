{% extends 'base.html.twig' %} {% block title %}Login{% endblock %} {% block
body %}
<body class="purple">
<section class="sec-login">
  <div class="container">
    <h1>CONNECTEZ VOUS  POUR ACCEDER A
 PLUS DE FONCTIONNALITES !</h1>

    {% if error %}
      <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post" class="login-container">
      <div class="form-group">
        <label for="email">Email :</label>
        <input type="email" id="email" name="_username" value="{{ last_email }}" required autofocus>
      </div>

      <div class="form-group">
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" required>
      </div>

      <button class="btn" type="submit">Se connecter</button>
      <p>Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous ici</a></p>
    </form>
  </div>
</section>
</body>

{% endblock %}
