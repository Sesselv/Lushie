<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
         <meta name="description" content="{% block meta_description %}Découvrez Lushie, un univers doux et coloré autour des savons, avec conseils, comparateur et avis.{% endblock %}">
         <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
         <script>
    const SOAP_RATE_URL = '{{ path("soap_rate") }}';
</script>
<script src="{{ asset('js/rating.js') }}"></script>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('/styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="section">
            {% block header %}
            <div class="container">
         
                    <img class="logo" src="{{ asset('/styles/img/logo-lush.svg') }}" alt="Lushie logo">
                    <div class="nav">
                        <ul class="nav-list">
                            <li class="nav-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                            <li class="nav-item"><a href="{{ path('app_soaps') }}">Les savons</a></li>
                            <li class="nav-item"><a href="">Le comparateur</a></li>
                              <li class="nav-item"><a href="{{ path('app_user_articles') }}">Espace échange</a></li>
                       <li class="nav-item">
    {% if app.user %}
        <a href="#">
            <img class="profil-icon" src="{{ asset('styles/img/profil-icon.svg') }}" alt="icon profil">
            Mon espace
        </a>
    {% else %}
        <a href="{{ path('app_login') }}">
            <img class="profil-icon" src="{{ asset('styles/img/profil-icon.svg') }}" alt=" icon profil">
            Se connecter
        </a>
    {% endif %}
</li>

                        </ul>
                    </div>
            </div>
            {% endblock %}
        </header>

        <main>

        {% block body %}{% endblock %}

        </main>

        <footer class="section">
{% block footer %}

  <div class="container">
    <div class="col-1">
      <img class="logo" src="{{ asset('/styles/img/logo-lush.svg') }}"alt="logo Lushie">
      </div>
    <div class="col-2">
     <ul>
       <li>Mentions légales </li>
       <li>.... </li>
     </ul>
    </div>
 </div>

{% endblock %}</footer>
    </body>
</html>
