{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/styles/app.css') }}">
{% endblock %}

{% block body %}
<body class="purple">
<section class="sec-register">
<div class="container"> 
    <div class="register-container"> 
        <h1>INSCRIVEZ-VOUS POUR ACCEDER A PLUS DE FONCTIONNALITES !</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'form-register'}}) }}

        <div class="form-group">
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'input-field'}}) }}
            <div class="error-message">{{ form_errors(registrationForm.email) }}</div>
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.first) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'input-field'}}) }}
            <p>Votre mot de passe doit contenir 8 caract√®res minimum, un chiffre, une majuscule, une minuscule et un symbole.</p>
            <div class="error-message">{{ form_errors(registrationForm.plainPassword.first) }}</div>
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword.second) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'input-field'}}) }}
            <div class="error-message">{{ form_errors(registrationForm.plainPassword.second) }}</div>
        </div>

        <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}
    </div>    
</div>

</section>
</body>
{% endblock %}

